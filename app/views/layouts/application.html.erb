<!DOCTYPE html>
<html>
<head>
  <title>Welcome</title>
  <%= favicon_link_tag %>
  <%= stylesheet_link_tag    "application", controller.controller_name %>
  <%= javascript_include_tag "application", controller.controller_name %>
  <%= csrf_meta_tags %>
  <script type="text/javascript">

  var _gaq = _gaq || [];
  _gaq.push(['_setAccount', 'UA-36313334-1']);
  _gaq.push(['_trackPageview']);

  (function() {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
  })();

  </script>
</head>
<body>
  <%= image_tag("background.png", :class => "bg") %> 
  <div id="top-navbar" class="navbar">
    <ul>
      <li> <%= link_to "Home", welcome_path %> </li>
      <li class="products"> <%= link_to "Products", products_path %> </li>
      <li> <%= link_to "Contact Us", contact_us_path %> </li>
      <%# <li> <%= link_to "About Us", about_us_path %> </li>
      <% if current_user.present? && current_user.admin %>
      <li> <%= link_to "Edit Products", admin_products_path %> </li>
      <li> <%= link_to "Edit User", admin_users_path %> </li>
      <li> <%= link_to "Log Out", logout_path %> </li>
      <% end %>
    </ul>
  </div>
  <hr/>


<%= yield %>

</body>
</html>
